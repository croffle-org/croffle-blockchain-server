{
    "name": "croffle-blockchain-server",
    "version": "0.0.1",
    "description": "croffle-blockchain-server",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "build:dev": "cross-env NODE_ENV=development nest build",
        "build:test": "cross-env NODE_ENV=testing nest build",
        "build:prod": "cross-env NODE_ENV=production nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start-dist": "node dist/main",
        "start:debug": "nest start --debug --watch",
        "start:dev": "cross-env NODE_ENV=development nest start",
        "start:dev-watch": "cross-env NODE_ENV=development nest start --watch",
        "start:dev-dist": "cross-env NODE_ENV=development node dist/main",
        "start:test": "cross-env NODE_ENV=testing nest start",
        "start:test-dist": "cross-env NODE_ENV=testing node dist/main",
        "start:prod": "cross-env NODE_ENV=production nest start",
        "start:prod-dist": "cross-env NODE_ENV=production node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json"
    },
    "dependencies": {
        "@nestjs/common": "^9.0.0",
        "@nestjs/core": "^9.0.0",
        "@nestjs/microservices": "^9.4.3",
        "@nestjs/platform-express": "^9.0.0",
        "@nestjs/platform-socket.io": "^9.3.12",
        "@nestjs/websockets": "^9.3.12",
        "cross-env": "^7.0.3",
        "kafkajs": "^2.2.4",
        "mysql2": "^3.5.2",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.2.0"
    },
    "devDependencies": {
        "@nestjs/axios": "^3.0.0",
        "@nestjs/cache-manager": "^2.1.0",
        "@nestjs/cli": "^9.0.0",
        "@nestjs/config": "^3.0.0",
        "@nestjs/schedule": "^3.0.2",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^9.0.0",
        "@nestjs/typeorm": "^10.0.0",
        "@types/cache-manager": "^4.0.3",
        "@types/express": "^4.17.13",
        "@types/jest": "29.2.4",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/luxon": "^3.3.1",
        "@types/node": "18.11.18",
        "@types/request": "^2.48.8",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^9.0.2",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "cache-manager": "^5.2.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "ethers": "^6.6.5",
        "fs": "^0.0.1-security",
        "jest": "29.3.1",
        "jsonwebtoken": "^9.0.1",
        "luxon": "^3.3.0",
        "prettier": "^2.3.2",
        "querystring": "^0.2.1",
        "request": "^2.88.2",
        "socket.io": "^4.7.2",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "29.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.1.1",
        "typeorm": "^0.3.17",
        "typescript": "^5.2.2",
        "winston-daily-rotate-file": "^4.7.1"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
